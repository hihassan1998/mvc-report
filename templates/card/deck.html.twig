{% extends 'base.html.twig' %}

{% block title %}
  Deck of Cards
{% endblock %}

{% block body %}
  <main>
    <h1>Deck of Cards</h1>

    <p>
      Here is the complete <a href="{{ path('card_deck') }}">sorted deck.</a>
    </p>

    {{ include('flash.html.twig') }}

    <ul class="cards-list">
      {% for card in cards %}
        <li>
          <span style="font-size: 100px;">{{ card.getGraphic()|raw }}</span>
        </li>
      {% endfor %}
    </ul>

    <a href="{{ path('card_shuffle') }}">Shuffle Deck</a>
    <form action="{{ path('card_shuffle') }}" method="POST">
      <button class="btn-simp" type="submit">Shuffle via /api/deck/shuffle Post request</button>
    </form>
  </main>
{% endblock %}
