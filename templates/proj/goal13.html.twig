{% extends 'base2.html.twig' %}

{% block title %}Projekt - 17 Globala Mål
{% endblock %}

{% block body %}
	<main class="main">
		<h1 class="proj-h1 center">{{ goal.number }}.
			{{ goal.name }}</h1>
		<div class="goal-article goal-{{ goal.number }}">
			<p>
				<strong>
					{{ goal.description }}
				</strong>
			</p>
			<h3>{{ goal.articleTitle }}</h3>
			<p>{{ goal.article }}</p>
		</div>
		<h2>Emissions Data</h2>
		<p>
			Konsumtionsbaserade utsläpp av växthusgaser i Sverige och i andra länder
		</p>
		{% if emissiondata is not empty %}
			<h3>Utsläpp av växthusgaser i Sverige och i andra länder från svensk konsumtion</h3>
			<p><br><small>m.ton CO2-ekv. År 2008–2016</small>
			</p>

			<table border="1" cellpadding="8" cellspacing="0">
				<thead>
					<tr>
						<th>Category</th>
						{% for entry in emissiondata %}
							<th>{{ entry.year }}</th>
						{% endfor %}
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>Sweden</td>
						{% for entry in emissiondata %}
							<td>{{ entry.emissionsSweden }}</td>
						{% endfor %}
					</tr>
					<tr>
						<td>Abroad</td>
						{% for entry in emissiondata %}
							<td>{{ entry.emissionsAbroad }}</td>
						{% endfor %}
					</tr>
					<tr>
						<td>Total</td>
						{% for entry in emissiondata %}
							<td>{{ entry.total }}</td>
						{% endfor %}
					</tr>
				</tbody>
			</table>
		{% else %}
			<p>Ingen emissionsdata hittades.</p>
			<a href="{{ path('proj_goal13_init_data') }}" class="goal-btn">Lägg till data</a>
		{% endif %}

	</main>
{% endblock %}
