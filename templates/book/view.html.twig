{% extends 'base.html.twig' %}

{% block title %}
	Book List
{% endblock %}

{% block body %}
	<main>
		<div class="double-bottom">
			<h1>All Books</h1>
			<p>
				These are all the books availabe in the library, do scorll down to see individual books.
			</p>
			<h2>
				Add a new book:
			</h2>
			<p>
				To add a new custom book:
				<a href="{{ path('book_new') }}">
					Click here
				</a>
			</p>
			<p>
				To add three books to database:
				<a href="{{ path('book_create') }}">
					Click here
				</a>
			</p>
		</div>
		<br>
		<br>

		{% if books is not empty %}
			{# <div class="table-wrapper"> #}
			<table class="library-table" border="1" cellpadding="10" cellspacing="0" style="border:2px solid brown;">

				<thead>
					<tr>
						<th>Title</th>
					</tr>
				</thead>
				<tbody>
					{% for book in books %}
						<tr>
							<td>
								<a href="{{ path('book_view_by_id', {'id': book.id}) }}">
									{{ book.title|e }}
								</a>
								<br>
								<img src="{{ asset('img/' ~ book.image) }}" alt="Cover for {{ book.title|e }}" style="height:300px; width:200px;">
								<br>
								<br>
								<a class="btn" href="{{ path('book_view_by_id', {'id': book.id}) }}">
									Show details
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	{% else %}
		<p>No books found.</p>
	{% endif %}

</main>{% endblock %}
